<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/wordmark"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/vocalizewordmark"
            android:contentDescription="wordmark" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Silent Speech Recorder"
            android:textSize="21sp"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/vocalizelogo"
            android:contentDescription="logo" />
    </RelativeLayout>

    <Button
        android:id="@+id/listenBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Listening"
        android:textAllCaps="false"
        android:padding="12dp" />

    <TextView
        android:id="@+id/predictionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="-"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <com.example.vocalize.WaveformView
        android:id="@+id/waveformView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/logText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Logs"
        android:paddingTop="8dp" />

</LinearLayout>
